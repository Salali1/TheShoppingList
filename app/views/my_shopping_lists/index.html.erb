<p id="notice"><%= notice %></p>
<div>
<h1>My Shopping Lists</h1>
<%= link_to 'New My Shopping List', new_my_shopping_list_path, style: 'display: inline-block; padding: 10px 20px; background-color: blue; color: white; text-decoration: none; border-radius: 4px;' %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_shopping_lists.each do |my_shopping_list| %>
      <tr>
        <td style="color:blue font-size:24px"><%= my_shopping_list.title %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', my_shopping_list, style: 'display: inline-block; padding: 10px 20px; background-color: green; color: white; text-decoration: none; border-radius: 4px;' %></td>
        <td><%= link_to 'Edit', edit_my_shopping_list_path(my_shopping_list), style: 'display: inline-block; padding: 10px 20px; background-color: orange; color: white; text-decoration: none; border-radius: 4px;' %></td>
        <td><%= button_to 'Destroy', my_shopping_list, method: :delete, data: { confirm: 'Are you sure?' }, style: 'display: inline-block; padding: 10px 20px; background-color: red; color: white; text-decoration: none; border-radius: 4px;' %></td>
        <% end %> 
        </tr>
    <% end %>
  </tbody>
</table>
